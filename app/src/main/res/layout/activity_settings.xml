<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akiva.crimestoppers.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Settings"
        android:id="@+id/settingsHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Radius (in miles)"
        android:id="@+id/radiusHeader"
        android:layout_below="@+id/settingsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textColor="#000000" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarRadius"
        android:layout_below="@+id/radiusHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:progress="5"
        android:max="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What would you like to be alerted about?"
        android:id="@+id/checkBoxHeader"
        android:layout_marginTop="26dp"
        android:textColor="#000000"
        android:layout_below="@+id/seekBarRadius"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robbery"
        android:id="@+id/robberyCheckBox"
        android:layout_below="@+id/checkBoxHeader"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shooting"
        android:id="@+id/shootingCheckBox"
        android:checked="false"
        android:layout_below="@+id/robberyCheckBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protest"
        android:id="@+id/protestCheckBox"
        android:checked="false"
        android:layout_below="@+id/shootingCheckBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rape"
        android:id="@+id/rapeCheckBox"
        android:checked="false"
        android:layout_below="@+id/protestCheckBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break-In"
        android:id="@+id/breakCheckBox"
        android:checked="false"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/shootingCheckBox"
        android:layout_alignEnd="@+id/settingsHeader" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domestic Violence"
        android:id="@+id/domesticCheckBox"
        android:checked="false"
        android:layout_above="@+id/shootingCheckBox"
        android:layout_alignStart="@+id/breakCheckBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/seekBarRadius" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Default"
        android:id="@+id/resetButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/settingsHeader" />

</RelativeLayout>
